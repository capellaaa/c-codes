	printf("******************\n");
	
	int x;
	
	printf("Bir sayi giriniz:");
	scanf("%d",&x); 
	
	if (x%2==0) 
	
	{
		printf ("sayi cifttir \n",x) ;
	}
	else 
	{ 
	    printf (" sayi tektir \n",x) ;
	
	}
	
